<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_50"
    tools:context=".presentation.nutrition.NutritionActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Enutritrackapp.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/emerald_600"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Botón de Sincronización -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/syncButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Sincronizar Datos"
                android:textColor="@color/white"
                android:backgroundTint="@color/emerald_600"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_rotate"
                app:iconTint="@color/white" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />

            <!-- Sección de Recomendaciones -->
            <androidx.cardview.widget.CardView
                android:id="@+id/recomendacionesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/amber_50"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recomendaciones del Doctor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recomendacionesList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_recomendacion" />

                    <TextView
                        android:id="@+id/noRecomendacionesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No hay recomendaciones en este momento"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600"
                        android:gravity="center"
                        android:padding="16dp"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botones de Acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/registrarAlimentoButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Registrar Alimento"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/blue_600"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconTint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/verAlimentosButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Mis Alimentos"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/blue_600"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_view"
                    app:iconTint="@color/white" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/registrarComidaButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Registrar Nueva Comida"
                android:textColor="@color/white"
                android:backgroundTint="@color/emerald_600"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconTint="@color/white" />

            <!-- Lista de Registros de Comida -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mis Registros de Comida"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray_900"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/registrosComidaList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_registro_comida" />

            <TextView
                android:id="@+id/noRegistrosText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay registros de comida aún"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

