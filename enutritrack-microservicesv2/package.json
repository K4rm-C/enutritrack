{
  "name": "enutritrack-microservices",
  "version": "1.0.0",
  "description": "Microservices healthcare system",
  "scripts": {
    "dev:auth": "ts-node-dev microservices/auth-service/src/app.ts",
    "dev:user": "ts-node-dev microservices/user-service/src/app.ts",
    "dev:doctor": "ts-node-dev microservices/doctor-service/src/app.ts",
    "dev:nutrition": "ts-node-dev microservices/nutrition-service/src/app.ts",
    "dev:patient": "ts-node-dev microservices/patient-service/src/app.ts",
    "dev:recommendation": "ts-node-dev microservices/recommendation-service/src/app.ts",
    "build:auth": "tsc --project microservices/auth-service",
    "build:all": "npm run build:auth && npm run build:user && npm run build:doctor && npm run build:nutrition && npm run build:patient && npm run build:recommendation",
    "install:all": "npm install"
  },
  "dependencies": {
    "@types/redis": "^4.0.10",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "couchbase": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.0",
    "express-xml-bodyparser": "^0.3.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.7.1",
    "typeorm": "^0.3.27",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^13.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.4.5",
    "@types/xml2js": "^0.4.14",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  }
}
